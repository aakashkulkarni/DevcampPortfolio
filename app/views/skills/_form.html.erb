<%= form_for(@skill) do |f| %>
  <% if @skill.errors.any? %>
    <% @skill.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %> 
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class:'form-control', placeholder: 'Title'  %>
  </div>
  
  <div class="form-group">
    <%= f.number_field :percent_utilized, class:'form-control', placeholder: 'Percent'  %>
  </div>
  
  <div class="form-group">
    <%= f.cktext_area :details, class:'form-control', placeholder: 'Description', rows: "5", ckeditor: { language: 'eng'}  %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class:'btn btn-primary' %>
  </div>
<% end %>